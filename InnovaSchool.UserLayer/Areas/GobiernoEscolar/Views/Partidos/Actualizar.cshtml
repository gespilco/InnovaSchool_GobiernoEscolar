
@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb{
    <li>
        <i class="icon-angle-right"></i>
        <a href="#">Partido Postulante</a>
    </li>
    <li>
        <i class="icon-angle-right"></i>
        <a href="#">Actualizar informacion del Partido</a>
    </li>
}

<div>
    <div class="row-fluid sortable ui-sortable">
        <div class="box span12">
            <div class="box-header" data-original-title="">
                <h2><i class="halflings-icon white edit"></i><span class="break"></span>Actualizar informacion del Partido</h2>
                <div class="box-icon">
                    <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-down"></i></a>
                </div>
            </div>
            <div class="box-content">
                <div class="form-horizontal">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label">Nombre Actividad</label>
                            <div class="controls">
                                <input name="NombreActividad" type="text" class="input-xlarge editable-input" title="Se necesita un nombre">
                                @*<span id="ContentPlaceHolder2_rfNombreActividad" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita un nombre</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Actividad</label>
                            <div class="controls">
                                <select name="Actividad"></select>
                                @*<span id="ContentPlaceHolder2_cvActividad" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita una actividad</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Tipo de Actividad</label>
                            <div class="controls">
                                <select name="TipoActividad"></select>
                                @*<span id="ContentPlaceHolder2_cvTipoActividad" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita un tipo de actividad</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Descripción</label>
                            <div class="controls">
                                <textarea name="Descripcion" rows="2" cols="20" class="input-xlarge editable-input" title="Se necesita una descripción"></textarea>
                                @*<span id="ContentPlaceHolder2_rvDescripcion" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita una descripción</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Motivo</label>
                            <div class="controls">
                                <textarea name="Motivo" rows="2" cols="20" class="input-xlarge editable-input" title="Se necesita un motivo"></textarea>
                                @*<span id="ContentPlaceHolder2_rvMotivo" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita un motivo</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Responsable</label>
                            <div class="controls">
                                <select name="Responsable"></select>
                                @*<span id="ContentPlaceHolder2_cvResponsable" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita un responsable</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Alcance</label>
                            <div class="controls">
                                <select name="Alcance"></select>
                                @*<span id="ContentPlaceHolder2_cvAlcance" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita un alcance</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Fecha de Inicio</label>
                            <div class="controls">
                                <input name="FechaInicio" type="text" class="input-medium datepicker hasDatepicker" title="Se necesita una fecha de inicio">
                                @*<span id="ContentPlaceHolder2_rfvFechaInicio" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita una fecha de inicio</i></div></span>
                                    <span id="ContentPlaceHolder2_rvFechaInicio" style="color:Red;font-size:Small;display:none;"><div><i>*La fecha de inicio debe pertenecer al año actual.</i></div></span>
                                    <span id="ContentPlaceHolder2_cvFechaInicio" style="color:Red;font-size:Small;display:none;"><div><i>*La fecha de inicio debe ser mayor o igual a la fecha actual.</i></div></span>*@
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Fecha de Fin</label>
                            <div class="controls">
                                <input name="FechaFin" type="text" class="input-medium datepicker hasDatepicker" title="Se necesita una fecha de fin">
                                @*<span id="ContentPlaceHolder2_rfvFechaFin" style="color:Red;font-size:Small;display:none;"><div><i>*Se necesita una fecha de fin</i></div></span>
                                    <span id="ContentPlaceHolder2_rvFechaFin" style="color:Red;font-size:Small;display:none;"><div><i>*La fecha de fin debe pertenecer al año actual.</i></div></span>
                                    <span id="ContentPlaceHolder2_cvFechaFin" style="color:Red;font-size:Small;display:none;"><div><i>*La fecha de fin debe ser mayor o igual a la fecha actual.</i></div></span>*@

                                <input type="submit" value="Ingresar Horas" class="btn btn-primary" style="margin-left: 10px;">
                            </div>
                        </div>
                        <div class="control-group">
                            <div>

                            </div>
                        </div>
                        <div class="form-actions">
                            <input type="submit" value="Guardar" id="btnGuardar" class="btn btn-primary">
                            <input type="submit" value="Enviar" id="btnEnviar" class="btn btn-primary">
                            <input type="submit" value="Limpiar" id="btnLimpiar" class="btn btn-warning">
                            <a href="~/" class="btn btn-success">Cancelar</a>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="row-fluid sortable ui-sortable">
            <div id="ContentPlaceHolder2_divConsultaSolicitudes" class="box span12">
                <div class="box-header" data-original-title="">
                    <h2><i class="halflings-icon white search"></i><span class="break"></span>Consulta de Solicitudes</h2>
                    <div class="box-icon">
                        <a href="#" class="btn-minimize"><i class="halflings-icon white chevron-down"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <div class="form-horizontal">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label" for="ddlAnio">Año Escolar</label>
                                <div class="controls">
                                    <select name="ddlAnio"></select>
                                </div>
                            </div>
                            <div class="control-group">
                                <div>

                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

